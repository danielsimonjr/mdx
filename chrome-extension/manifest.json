{
  "manifest_version": 3,
  "name": "MDX Viewer",
  "version": "1.0.0",
  "description": "View MDX (Markdown eXtended Container) files in Chrome",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "MDX Viewer",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [],
  "host_permissions": []
}
